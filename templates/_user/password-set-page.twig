{% extends '_base' %}

{% set pageTitle = 'Set Password'|t('app') %}

{% block content %}

{% set inputPasswordAttributes = {	
	type: 'password',
	name: 'newPassword',
	id: 'new-password',
	required: true,
	autofocus: true,
	label: 'Password'|t('app'),
} %}

{% set submitButtonAttributes = {
	text: 'Set Password'|t('app'),
	type: 'submit',
} %}

{# embed #}
{% embed '_user/partials/base-form' %}

	{% block formContent %}
		{% import '_user/partials/form-macros' as m %}
		
		{{ actionInput('users/set-password') }}

		{# id and code variables are injected automatically into template based on URL #}
		{{ hiddenInput('code', code) }}
		{{ hiddenInput('id', id) }}

		{# password #}
		{{m.formFieldInput(inputPasswordAttributes)}}

		{# submit button #}
		{{m.formFieldButton(submitButtonAttributes)}}
	{% endblock %}

{% endembed %}

{% endblock %}